<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kashmoney.tipcalculator.SummaryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="58dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="64dp"
        android:background="#ffe0e0e0"
        android:elevation="15dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:id="@+id/linearLayout">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Summary"
            android:textAlignment="center"
            android:textColor="#ff333333"
            android:textSize="45sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/summary_total_bill_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="5dp"
            android:textColor="#ff333333"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/summary_total_amount_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="2dp"
            android:textColor="#ff1c1c1c"
            android:textSize="25sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/summary_tip_amount_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:padding="2dp"
            android:textColor="#ff1c1c1c"
            android:textSize="25sp"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/linearLayout"
        android:layout_below="@+id/linearLayout"
        android:layout_marginEnd="58dp"
        android:layout_marginTop="45dp"
        android:orientation="vertical"
        android:background="#ffe0e0e0"
        android:elevation="15dp">

        <TextView
            android:id="@+id/per_person_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Per Person"
            android:textAlignment="center"
            android:textColor="#ff333333"
            android:textSize="45sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/per_person_amount_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="2dp"
            android:textColor="#ff1c1c1c"
            android:textSize="25sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/per_person_tip_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="2dp"
            android:textColor="#ff1c1c1c"
            android:textSize="25sp"
            android:textStyle="italic" />
    </LinearLayout>


</android.widget.RelativeLayout>
